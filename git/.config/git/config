[alias]
	lol = log --oneline --decorate --graph
	ctags = !.git/hooks/ctags
[core]
	editor = vim
	autocrlf = input
[diff]
	algorithm = histogram
	tool = meld
[difftool]
	prompt = false
[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"
[init]
	templatedir = ~/.git_template
[merge]
	tool = meld
[mergetool "meld"]
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[push]
	default = simple
[user]
	name = prawitsf
	email = florian.prawits@ait.ac.at
